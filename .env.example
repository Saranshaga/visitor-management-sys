# Visitor Management System Environment Variables
# Copy this file to .env and update the values as needed

# Application Configuration
VITE_APP_TITLE="Visitor Management System"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Modern visitor management and tracking system"

# API Configuration (for future backend integration)
VITE_API_URL="http://localhost:3001/api"
VITE_API_TIMEOUT=10000

# Database Configuration (for future backend integration)
VITE_DB_HOST="localhost"
VITE_DB_PORT=5432
VITE_DB_NAME="visitor_management"

# Authentication (for future implementation)
VITE_JWT_SECRET="your-jwt-secret-key-here"
VITE_JWT_EXPIRY="24h"

# Email Configuration (for notifications)
VITE_SMTP_HOST="smtp.gmail.com"
VITE_SMTP_PORT=587
VITE_SMTP_USER="your-email@example.com"
VITE_SMTP_PASS="your-app-password"

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif"

# Analytics (for future integration)
VITE_GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
VITE_ANALYTICS_ENABLED=false

# Security Configuration
VITE_CORS_ORIGIN="http://localhost:5173"
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000

# Development Configuration
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL="info"

# Production Configuration
VITE_PRODUCTION_URL="https://your-domain.com"
VITE_CDN_URL="https://cdn.your-domain.com"

# Third-party Integrations
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_..."
VITE_RECAPTCHA_SITE_KEY="your-recaptcha-site-key"

# Backup Configuration
VITE_BACKUP_ENABLED=true
VITE_BACKUP_INTERVAL="24h"
VITE_BACKUP_RETENTION_DAYS=30